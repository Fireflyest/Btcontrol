<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="22dp"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="5dp"
    android:elevation="1dp"
    android:background="@color/foreground"
    android:layout_width="175dp"
    android:layout_height="140dp">

    <TextView
        android:id="@+id/item_mode_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/item_mode_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/text_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_mode_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_mode_name" />

    <TextView
        android:id="@+id/item_mode_delete"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_delete"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:textColor="@color/foreground"
        android:textStyle="bold"
        android:background="@color/colorAccentDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>